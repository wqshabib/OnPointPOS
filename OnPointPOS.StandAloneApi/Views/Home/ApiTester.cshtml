                    return;
                }
                GetCurrentMonthSale();
            });

            $('#btnGetMonthalySale').click(function () {
                if ($('#api_access_token').val() == '') {
                    $('#dialog').dialog('open');
                    return;
                }
                GetMonthalySale();
            });
            $('#btnSaleByMonth').click(function () {
                if ($('#api_access_token').val() == '') {
