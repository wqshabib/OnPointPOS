        function FillOutlets() {

            $.ajax({
                type: "Get",
                url: rootPath + 'api/Sale/GetOutlets',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("Authorization", 'Bearer ' + $('#api_access_token').val());
                },
                success: function (_d) {

                    $('#outlet').html('');
                    var $select = $("#outlet");
                    $.each(_d, function (i, item) {

                        $('<option>', {
                            value: item.Id
                        }).html(item.Name).appendTo($select);
                    });

                }
            });
