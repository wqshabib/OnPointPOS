                    return;
                }
                GetSaleByMonth();
            });

		 $('#btnGetTables').click(function () {
                if ($('#api_access_token').val() == '') {
                    $('#dialog').dialog('open');
                    return;
                }
                GetTables();
            });

		 $('#btnPostOrder').click(function ()
		 {
		     if ($('#api_access_token').val() == '') {
		         $('#dialog').dialog('open');
		         return;
		     }
			 $.ajax({
				 type: "GET",
				 url: '@Url.Action("_postOrder", "home")',
				 success: function (_d) {

				     $('#divresult').html(_d);
				 }
			 }).fail(function (_d) { alert(JSON.stringify(_d)); });
		 });


		 

		 $('#btnGetUser').click(function ()
		 {
		     if ($('#api_access_token').val() == '') {
