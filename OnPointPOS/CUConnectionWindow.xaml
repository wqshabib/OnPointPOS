<Window x:Class="POSSUM.CUConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:translation="clr-namespace:POSSUM.Res"
        xmlns:local="clr-namespace:POSSUM" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="DeviceConnectionWindow" Height="100" Width="330">
    <Grid Background="#FF16A05D">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
           
        </Grid.RowDefinitions>
        <TextBlock Name="txtMessage" VerticalAlignment="Center" Margin="10" TextWrapping="Wrap" FontWeight="Bold"  Text="Anslutningsfel till kontrollenheten. Kontrollera utrustningen."/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Name="btnResetConnection" Content="Försök igen" Grid.Row="1" Width="90" Margin="5" Click="Retry_Click" Foreground="White" Background="#FF007ACC" Visibility="Visible"/>


            <Button Content="Avbryt" Grid.Row="1" Width="100" Margin="5" Foreground="White" Visibility="Visible" Click="Close_Click" Background="#FFDE5145"/>
        </StackPanel>
    </Grid>
</Window>
