                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <ListView Margin="5 2 2 2" Grid.Row="3" Background="Transparent" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0" ItemsSource="{Binding ItemDetails}" >
                                            <ListView.ItemTemplate>
