@model LUETemplateSite.Models.SiteModel
@{
    ViewBag.Title = Model.ShopConfig.CompanyName;
    ViewBag.Facebook = Model.GetCompanyInfo.FacebookUrl;
    ViewBag.Twitter = Model.GetCompanyInfo.TwitterUrl;
    ViewBag.Instagram = Model.GetCompanyInfo.InstagramUrl;
}

<style>
    .hidden2{display:none;}
     @(!Model.ShopConfig.StandAlone ? "@media(min-width:990px){ .non-standalone-spacer { display:none; } }" : String.Empty)

</style>

<!-- Page Content -->
@if (Model.ShopConfig.ShopTemplate == 1)
{
    <div class="container">

        <div class="logo-div" style="@Model.StandAloneStyle">
            <h1>
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-xs-12 logo-img">
                        <span class="round-logo-top"><img class="top-logo" src="@Model.ShopConfig.Image"></span>
                    </div>
                    <div class="col-lg-10 col-md-10 col-xs-12 logo-text">
                        @Model.GetCompanyInfo.Name
                    </div>
                </div>
            </h1>
        </div>


        @if (Model.ShopConfig.ShopListType == 1)
        {
            <div class="row">
                <div class="clearfixer"></div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                    <div class="col-lg-top-header col-xs-12" style="@Model.StandAloneStyle">
                        <div class="col-top-logo col-lg-6 col-xs-12 col-md-6">
                            <h1>Välkommen!</h1>
