                            {
                                <div class="customer-soc-wrap">
                                    <h4>Följ oss</h4>
                                    <a href="@ViewBag.Facebook" style="@(ViewBag.Facebook == "" ? "display:none" : String.Empty)"><img class="customer-soc" src="~/img/facebook.png"></a>
                                    <a href="@ViewBag.Twitter" style="@(ViewBag.Twitter == "" ? "display:none" : String.Empty)"><img class="customer-soc" src="~/img/twitter.png"></a>
