    function HandleMaxSubContent(group, max) {
        var count = 0;
        $('input:checkbox:checked').each(function () {
            if ($(this).attr('group') == group) {
                count++;
            }
        });
        $('input:checkbox').each(function () {
            if ($(this).attr('group') == group) {
                $(this).removeAttr("disabled");
            }
        });
        if (count >= max) {
            $('input:checkbox').each(function () {
                if ($(this).attr('group') == group) {
                    $(this).attr("disabled", 'disabled');
                }
            });
            $('input:checkbox:checked').each(function () {
                if ($(this).attr('group') == group) {
                    $(this).removeAttr("disabled");
                }
            });
        }
    }
    function SumSubContent() {
        var owe = 0;
        $('input:checkbox').each(function () {
            if ($(this).attr('group') == -1) {
                owe = owe + $(this).data('amount');
            }
        });
        $('input:checkbox:checked').each(function () {
            if ($(this).attr('group') == -1) {
                owe = owe - $(this).data('amount');
            }
        });
        $('input:radio').each(function () {
            var sum = 0;
            $('input:checkbox:checked').each(function () {
                if ($(this).attr('group') == 0) {
                    sum = sum + $(this).data('amount');
                }
                if ($(this).attr('group') == -2) {
                    sum = sum + $(this).data('amount');
                }
            });
            sum = sum + $(this).data('amount');
            if (owe > 0) {
                sum = sum - owe;
                if (sum < $(this).data('amount')) {
                    sum = $(this).data('amount');
                }
            }
            $(this).parent("label").children("span").text($(this).data('name') + " " + sum + " kr");
        });
        var sumPrice = 0;
        $('input:checkbox:checked').each(function () {
            if ($(this).attr('group') == 0) {
                sumPrice = sumPrice + $(this).data('amount');
            }
            if ($(this).attr('group') == -2) {
                sumPrice = sumPrice + $(this).data('amount');
            }
        });
        sumPrice = sumPrice + $("#price").data('amount');
        if (owe > 0) {
            sumPrice = sumPrice - owe;
            if (sumPrice < $("#price").data('amount')) {
                sumPrice = $("#price").data('amount');
            }
        }
        $("#price").text(sumPrice + " kr");
    }
