                            <a class="btn btn-default download-menu"
                               style="@(String.IsNullOrEmpty(Model.GetCompanyInfo.PdfUrl) ? "display:none" : String.Empty)"
                               href="@(String.IsNullOrEmpty(Model.GetCompanyInfo.PdfUrl) ? "#" : Model.GetCompanyInfo.PdfUrl)"
                               target="_blank">
                                <span class="glyphicon glyphicon-file"></span> Ladda ner meny
                            </a>
                        </div>
                        <div class="col-lg-6 col-xs-12 col-md-6 opening">
                            <img class="opening-icon" src="~/img/clock.png">
                            <h4>Öppettider</h4>
                            @for (int i = 0; i < Model.CompanyOrderPrinter.AvailabilityList.Count; i++)
                            {
                                @Model.CompanyOrderPrinter.AvailabilityList[i];
                                if (i + 1 != Model.CompanyOrderPrinter.AvailabilityList.Count)
                                {
                                    <br />
                                }
                            }
                            @if (Model.CompanyOrderPrinter.AvailabilityLunchList.Count > 0)
                            {
                                <h4>Lunch</h4>
                                <p>
                                    @for (int j = 0; j < Model.CompanyOrderPrinter.AvailabilityLunchList.Count; j++)
                                    {
                                        @Model.CompanyOrderPrinter.AvailabilityLunchList[j];
                                        if (j + 1 != Model.CompanyOrderPrinter.AvailabilityLunchList.Count)
                                        {
                                            <br />
                                        }
                                    }
                                </p>
                            }
