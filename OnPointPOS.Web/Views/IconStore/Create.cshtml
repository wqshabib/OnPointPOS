@model IconStoreModel

@{
    ViewBag.Title = "New Icon";
}


@using (Html.BeginForm("Create", "IconStore", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section>
        <div class="mt20 pl10 pr10">
            <div class="panel">
                 <div class="panel-heading">
                <span class="panel-title"><i class="fa fa-pencil"></i>@Resource.IconStore</span>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <!--<h4>@Resource.IconStore</h4>-->
                    <div style="color:red;font-size:16px;">@ViewBag.Error</div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">@Resource.Title</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">@Resource.Type</label>

                        <div class="col-md-9">
                            <label class="field select">
                                @Html.DropDownListFor(model => model.Type, Model.Types, new { @class = "field select  form-control" })
                                @Html.ValidationMessageFor(model => model.Type)
                                <i class="arrow"></i>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-9">
                            <input type="file" name="file" id="file" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-9">
                            <a id="btnAddProduct1" class="btn  btn-danger" href="/IconStore">
                                <span class="fa pr5"></span> @Resource.Cancel
                            </a>
                            <input class="btn btn-primary fa fa-save" type="submit" value="@Resource.Save" />
                        </div>
                    </div>
                </div>
                
                </div>
            </div>
         </div>
    </section>
}



